var sentPushes = 0

rule "catch_switching_from_buttons"
when
    Item alarm_msg received update
then
  // logInfo("ALARM:", alarm_msg.state.toString)
  // Check alarm context and conditions
  if (alarm.state.toString != "ON") { return; }

  switch alarm_msg.state.toString {
    case "gate button pressed": 
      sendTelegram("bot_silets", "CІЛЕЦЬ - ТРИВОГА! Вимикач ворота.")
    case "tower button pressed": 
      sendTelegram("bot_silets", "CІЛЕЦЬ - ТРИВОГА! Вимикач ворота.")
    case "gate motion start": 
      sendTelegram("bot_silets", "CІЛЕЦЬ - ТРИВОГА! ВОРОТА! - рух.")
    case "tower motion start": 
      sendTelegram("bot_silets", "CІЛЕЦЬ - ТРИВОГА! ПІРС - рух.")

    default : logInfo("ALARM MSG:", alarm_msg.state.toString)
  }

end

